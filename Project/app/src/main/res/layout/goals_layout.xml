<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    layout_width="wrap_content"
    layout_height="wrap_content"
    orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        app:srcCompat="@drawable/selectedgrad"
        android:id="@+id/reason_color"
        android:layout_width="35dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Goal Name"
            android:layout_width="match_parent"
            android:id="@+id/goal_name"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Reason: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reason"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:fontFamily="serif"
            android:textSize="14sp" />

        <TextView
            android:text="Total Progress:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/total_progress_text"
            android:layout_weight="1"
            android:fontFamily="serif" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/total_progress_bar"
            android:layout_weight="1" />

        <TextView
            android:text="This Month's Progress:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/month_progress_text"
            android:layout_weight="1"
            android:fontFamily="serif" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/month_progres_bar"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>